{
    "name": "npmscript",
    "version": "1.0.0",
    "description": "## 脚本基础",
    "main": "hook.js",
    "scripts": {
        "dev:arg": "node hook.js --production false",
        "pretest": "echo \"info: before run test script\"",
        "test": "node hook.js",
        "posttest": "echo \"info: after run test script\"",
        "stop": "echo 'info: stop'",
        "start": "echo 'info: start'",
        "restart": "echo 'info: restart'",
        "open:test": "open http://localhost:9009",
        "serve:http": "http-server -p 9009 dist/ && open http://localhost:9009",
        "serve:live": "echo '这个命令启动服务器之后会自动打开' && live-server dist/ --port=9009",
        "serve:serve": "serve -p 9009 dist/",
        "lint:test": "eslint *.js && exit 0",
        "hotload": "live-reload --port 9091 dist/",
        "readme": "markdown-chalk --input readme.md"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "http-server": "^0.12.0",
        "live-serve": "0.0.0",
        "live-server": "^1.2.1",
        "markdown-chalk": "^2.1.0"
    }
}
